<!-- Maven assembly xml that configures the zip file containing our distribution -->
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>dendriform-client-zip</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>dist</directory>
            <includes>
                <include>tree.css</include>
            </includes>
            <outputDirectory>/css/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>dist</directory>
            <includes>
                <include>example.bundle.js</include>
                <include>example.bundle.js.map</include>
            </includes>
            <outputDirectory>/js/</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
