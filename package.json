{
  "name": "dendriform",
  "version": "1.0.0",
  "description": "A web based offline first outliner with sync",
  "repository": {
    "type": "git",
    "url": "https://github.com/aggregat4/dendriform"
  },
  "engines": {
    "node": ">=13.0.0",
    "npm": ">=6.13.0"
  },
  "main": "main.js",
  "watch": {
    "build-test": "./src/**/*.*"
  },
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "build": "cp src/css/*.css dist && cp src/example/*.css dist && npx rollup -c rollup.config.js",
    "test": "npx ts-node test/runtests.ts",
    "build-test": "npm run build && npm run test",
    "clean-build-test": "npm run clean && npm run build && npm run test",
    "watch": "npm-watch",
    "sloc": "npx sloc src",
    "unused-exports": "npx ts-unused-exports tsconfig.json",
    "serve": "npx http-server dist",
    "unused-dependencies": "npx depcheck"
  },
  "author": "Boris Terzic <boris@terzic.be>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/file-saver": "2.0.1",
    "@types/hyperscript": "0.0.3",
    "@wessberg/rollup-plugin-ts": "1.2.16",
    "barecolor": "^1.0.1",
    "ceylon": "^0.9.1",
    "jsdom": "^16.1.0",
    "jsdom-global": "^3.0.2",
    "npm-watch": "0.6.0",
    "rollup": "1.31.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-html2": "0.7.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-visualizer": "3.3.1",
    "ts-unused-exports": "6.0.0",
    "tslint": "6.0.0",
    "typescript": "3.7.5"
  },
  "dependencies": {
    "file-saver": "2.0.2",
    "hyperscript": "2.0.2",
    "idb": "5.0.1",
    "lit-html": "1.1.2",
    "redom": "3.25.1"
  }
}
