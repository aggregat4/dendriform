{
  "name": "tree",
  "version": "0.1.0",
  "description": "Outliner with extras",
  "main": "main.js",
  "scripts": {
    "build:css": "node-sass src/*.scss dist/main.css",
    "watch:css": "onchange src/*.scss -- npm run build:css -s",
    "lint": "eslint src",
    "babel": "babel src -d lib",
    "build:js": "npm run lint -s && npm run babel -s && browserify lib/*.js > dist/main.js",
    "watch:js": "onchange src/*.js -- npm run build:js -s",
    "build:html": "cp src/index.html dist",
    "watch:html": "onchange src/*.html -- npm run build:html -s",
    "build": "npm run build:css -s && npm run build:js -s && npm run build:html -s",
    "build:watch": "parallelshell 'npm run watch:css -s' 'npm run watch:js -s' 'npm run watch:html -s'",
    "serve": "http-server -p 9090 dist/",
    "livereload": "live-reload --port 9091 dist/"
  },
  "author": "Boris Terzic <boris@terzic.be>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.22.0",
    "browserify": "^13.3.0",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-react": "^4.3.0",
    "http-server": "^0.9.0",
    "live-reload": "^1.1.0",
    "node-sass": "^3.13.1",
    "onchange": "^2.1.2",
    "parallelshell": "^2.0.0"
  },
  "dependencies": {
    "maquette": "^2.4.3",
    "pouchdb": "^6.1.2"
  }
}
