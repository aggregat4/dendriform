{
  "name": "dendriform",
  "version": "1.0.0",
  "description": "A web based offline outliner with sync",
  "repository": {
    "type": "git",
    "url": "https://github.com/aggregat4/dendriform"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.13.0"
  },
  "main": "main.js",
  "scripts": {
    "clean": "rm -rf node_modules dist && mkdir dist",
    "build": "cp src/css/*.css dist && cp src/example/*.css dist && cp src/example/*.html dist && npx rollup -c rollup.config.js",
    "build-and-test": "npm run build && npm run test",
    "serve": "http-server -p 9090 dist/",
    "watchold": "onchange './src/**/*.*' './*.*' -i -- npm run build-and-test -s",
    "watch": "onchange './src/**/*.*' './*.*' -i -- npm run build-and-test -s",
    "sloc": "node_modules/.bin/sloc src",
    "test": "npx jest",
    "testcoverage": "npx jest --coverage",
    "test-watch": "npx jest --watch",
    "unused": "./node_modules/.bin/ts-unused-exports tsconfig.json"
  },
  "author": "Boris Terzic <boris@terzic.be>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.7.5",
    "@types/dexie": "^1.3.1",
    "@types/file-saver": "^2.0.1",
    "@types/hyperscript": "0.0.3",
    "@types/jest": "^24.0.25",
    "http-server": "^0.12.0",
    "jest": "^24.9.0",
    "lodash": ">=4.17.15",
    "onchange": "^6.1.0",
    "parallelshell": "^3.0.2",
    "rollup": "^1.28.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-off-main-thread": "^1.1.0",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-visualizer": "^3.3.1",
    "sloc": "^0.2.1",
    "syntax-error": ">=1.1.1",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.1",
    "ts-unused-exports": "^5.3.0",
    "tslib": "^1.10.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "dexie": "^2.0.4",
    "file-saver": "^2.0.2",
    "hyperscript": "^2.0.2",
    "redom": "^3.24.3"
  }
}
